<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a tab that displays a tour type name -->
    <style name="TourTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#424242</item>
        <item name="tabSelectedTextColor">#424242</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/TabLayoutCustomText</item>
    </style>

    <style name="TabLayoutCustomText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CollapsedCollapsingToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandedCollapsingToolbarTextAppearance">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="CardViewCustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="LinearLayoutCustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TitleTextCustomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="InnerTextCustomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>
